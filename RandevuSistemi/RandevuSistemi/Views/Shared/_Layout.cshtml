<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/layout.css" rel="stylesheet" />
    <link href="~/Content/css/form.css" rel="stylesheet" />

</head>
<body class="body">
    <div class="container bosluk">
        <div class="col-md-8 col-md offset-2 header">
            <div class="text-center" style="padding-top:15px; padding-bottom:20px;">
                <h2>   Kuaför Randevu Sistemi </h2>
                <p>Sisteme kayıt olabilir, kaydınız varsa giriş yapabilirsiniz.</p>
            </div>

            @*header*@
            <div>
                <nav class="navbar navbar-light bg-light justify-content-center">
                    <form class="form-inline">
                        <a class="button" href="Home/Index" role="button">Tanıtım</a>
                        <a class="button" href="Home/KayitOl" role="button">Kayıt Ol</a>
                        <button class="button" type="button">Giriş Yap</button>
                    </form>
                </nav>
            </div>

            <hr />

            @*body*@
            <div>

                <div>
                    @RenderBody()
                </div>

            </div>

            <br />
            <br />

        </div>

        <br />

        @*footer*@
        <div class="row" style="padding-top:20px;">
            <div class="col-md-8 col-md offset-2">
                <div class="text-center">
                    <span style="color:white;">
                        <p>Copyright &copy; Kuaför Randevu Sistemi
                    </span>
                </div>
            </div>

        </div>


    </div>


    <script src="~/Scripts/js/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)


</body>
</html>
